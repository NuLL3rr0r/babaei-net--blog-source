        <li><a href="<%- theme.github %>" title="مرا در گیت هاب دنبال کنید" target="_blank"><i class="fa fa-git"></i></a>&nbsp;</li>
        <% } %>
        <% if(theme.linkedin){ %>
        <li><a href="<%- theme.linkedin %>" title="مرا در لینکدین دنبال کنید" target="_blank"><i class="fa fa-linkedin"></i></a>&nbsp;</li>
        <% } %>
        <% if(theme.telegram){ %>
        <li><a href="<%- theme.telegram %>" title="اشتراک در کانال تلگرام" target="_blank"><i class="fa fa-paper-plane"></i></a>&nbsp;</li>
