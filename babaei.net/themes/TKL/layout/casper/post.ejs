<% permalink = config.url + config.root + post.path %>
<section id="intro">
    <div class="container">
        <div class="row col-md-offset-2">
            <div class="col-md-8">
    			<%- partial('post/meta') %>
                <h1><%- post.title %></h1>
            </div>
        </div>
        <div class="col-md-8 col-md-offset-2">
      		<%- post.content %>
            <div class="clearfix"></div>
            <div class="sharing">
                <a href="https://twitter.com/share?url=<%- post.permalink %>&text=<%- post.title %><% if(theme.twitter_user){ %>&via=<%- theme.twitter_user %><% } %>" title="Twitter" target="_blank"><i class="icon-twitter"></i></a>
                <a href="https://www.facebook.com/sharer.php?u=<%- post.permalink %>" title="Facebook" target="_blank"><i class="icon-facebook"></i></a>
                <a href="https://plus.google.com/share?url=<%- post.permalink %>" title="Google+" target="_blank"><i class="icon-google-plus"></i></a>
            </div>
            <hr class="nogutter">
        </div>
        <%- partial('post/navigation') %>
        <div class="duoshuo"><%- partial('post/duoshuo') %></div>
    </div>
</section>
